<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:contentPadding="0dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/bank_thumbnail"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#e1e1e1">

                <ImageView
                    android:id="@+id/img_thumbnail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/cardNbr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/img_thumbnail"
                    android:layout_centerHorizontal="true"
                    android:text="0006" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/spent_details"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_toRightOf="@+id/bank_thumbnail">

                <TextView
                    android:id="@+id/month_spent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="16dp"
                    android:layout_marginBottom="7dp"
                    android:textColor="@android:color/black"
                    android:text="dsadsadsds"/>
                <View
                    android:id="@+id/horizontal_line"
                    android:layout_width="fill_parent"
                    android:layout_below="@+id/month_spent"
                    android:layout_height="1dp"
                    android:background="#eee"/>
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/horizontal_line"
                    android:textColor="@android:color/black"
                    android:text="Test"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/last_updated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/balance"
                    android:textSize="11dp"
                    android:text="Test" />
            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>